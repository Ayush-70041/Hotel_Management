            padding: 0;
            margin: 0;
            display: flex;
            align-items: center;
        }

        .navbar ul li {
            margin-right: 20px;
        }

        .navbar ul li a {
            color: #fff;
            text-decoration: none;
            font-size: 18px;
            transition: color 0.3s; /* Smooth color transition */
        }

        .navbar ul li a:hover {
            color: #ccc; /* Light grey on hover */
        }

        /* Carousel Styles */
        .carousel-container {
            margin-top: 20px;
        }

        .carousel {
            height: 50vh; /* Full viewport height */
        }

        .carousel-item img {
            height: 40vh; /* Full viewport height */
            object-fit: cover; /* Cover the entire carousel area */
        }

        .carousel-caption {
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent black background */
          color: #fff; /* White text color */
          text-align: center;
           /* Padding top, right, and bottom (added 10px bottom padding) */
          border-radius: 8px;
          width: 70%; /* Adjust as necessary */
          max-width: 90%; /* Maximum width to adapt to smaller screens */
          box-sizing: border-box; /* Include padding in the width calculation */
          overflow: hidden; /* Hide overflow to keep text within bounds */
      }
      
      .carousel-caption h2{
        .carousel-caption p {
          margin: 0;
          padding: 2px;
          font-size: 1.6em; /* Smaller font size */
          overflow-wrap: break-word; /* Wrap long words to prevent overflow */
          max-width: 100%; /* Ensure text does not exceed the width of the caption */
      }
      }
      .carousel-caption p {
          margin: 0;
          padding: 2px;
          font-size: 1.1em; /* Smaller font size */
          overflow-wrap: break-word; /* Wrap long words to prevent overflow */
          max-width: 100%; /* Ensure text does not exceed the width of the caption */
      }
      
      .carousel-caption p:last-child {
          margin-top: 4px; /* Space between paragraphs */
      }
      
      @media (max-width: 768px) {
          .carousel-caption h2,
          .carousel-caption p {
              font-size: 1.4em; /* Further adjust font size for smaller screens */
          }
      }
      
      @media (max-width: 576px) {
          .carousel-caption h2,
          .carousel-caption p {
              font-size: 1.2em; /* Further adjust font size for smaller screens */
          }
      }
      
        /* Card Styles */
        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin-top: 20px;
            color: #000; /* Default card text color */
        }

        .card {
            width: 250px;
            background-color: #f2f2f2;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .card img {
            width: 100%;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .card-content {
